{
  "$schema": "https://github.com/hyperledger-labs/fablo/releases/download/1.2.0/schema.json",
  "global": {
    "fabricVersion": "2.5.4",
    "tls": true,
    "peerDevMode": false,
    "tools": {
      "explorer": true
    }
  },
  "orgs": [
    {
      "organization": {
        "name": "Orderer",
        "domain": "orderer.healthcare.com"
      },
      "orderers": [
        {
          "groupName": "orderers-group",
          "type": "solo",
          "instances": 3
        }
      ],
      "tools": {
        "fabloRest": true
      }
    },
    {
      "organization": {
        "name": "patient",
        "domain": "patient.healthcare.com"
      },
      "peer": {
        "instances": 3,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": true,
        "explorer": true
      }
    },
    {
      "organization": {
        "name": "doctor",
        "domain": "doctor.healthcare.com"
      },
      "peer": {
        "instances": 3,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": true,
        "explorer": true
      }
    },
    {
      "organization": {
        "name": "pharmacy",
        "domain": "pharmacy.healthcare.com"
      },
      "peer": {
        "instances": 3,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": true,
        "explorer": true
      }
    },
    {
      "organization": {
        "name": "laboratory",
        "domain": "laboratory.healthcare.com"
      },
      "peer": {
        "instances": 3,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": true,
        "explorer": true
      }
    },
    {
      "organization": {
        "name": "insurance",
        "domain": "insurance.healthcare.com"
      },
      "peer": {
        "instances": 3,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": true,
        "explorer": true
      }
    }
  ],
  "channels": [
    {
      "name": "healthcare-channel",
      "orgs": [
        {
          "name": "patient",
          "peers": [
            "peer0", "peer1", "peer2"
          ]
        },
        {
          "name": "doctor",
          "peers": [
            "peer0", "peer1", "peer2"
          ]
        },
        {
          "name": "pharmacy",
          "peers": [
            "peer0", "peer1", "peer2"
          ]
        },
        {
          "name": "laboratory",
          "peers": [
            "peer0", "peer1", "peer2"
          ]
        },
        {
          "name": "insurance",
          "peers": [
            "peer0", "peer1", "peer2"
          ]
        }
      ]
    }
  ],
  "chaincodes": [
    {
      "name": "chaincode1",
      "version": "0.0.1",
      "lang": "java",
      "channel": "healthcare-channel",
      "directory": "./chaincodes/chaincode-java"
    }
  ]
}